{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "noImplicitAny": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "wwwroot/js"
    },
    "include": ["wwwroot/ts/*"]
}